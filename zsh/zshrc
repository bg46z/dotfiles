# Environment Variables
export EDITOR=vim
export TERM=xterm-256color
export PATH="$HOME/bin:$HOME/.rvm/bin:$PATH"
ZSHCONFDIR=(~/.dotfiles/zsh)
ZSHLIBDIR=($ZSHCONFDIR/lib)

# Autoload
fpath=( $ZSHLIBDIR/functions "${fpath[@]}")
autoload -Uz ww _git-add vcs_info vcs_info_rprompt dot ls

# Completion
autoload -Uz compinit
compinit

# Source Files
source $ZSHLIBDIR/aliases/aliases.zsh
source $ZSHLIBDIR/prompt/prompt.zsh
