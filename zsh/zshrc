# Environment Variables
export EDITOR=vim
export TERM=xterm-256color
export PATH="$HOME/bin:$HOME/.rvm/bin:$PATH"
ZSHCONFDIR=(~/.dotfiles/zsh)
ZSHLIBDIR=($ZSHCONFDIR/lib)

# Autoload

# Completion and other built-in functions
autoload -Uz compinit vcs_info
compinit


fpath=( $ZSHLIBDIR/functions "${fpath[@]}")
#autoload -Uz ww _git-add vcs_info_rprompt dot 
for file in $ZSHLIBDIR/functions/* ; do
	if [[ -a "$file" ]]; then
		filename=${file:t}
		autoload -Uz "$filename"
	fi
done


# Source Files
# Add files to "sourcefiles" array, then source each file in the array.
typeset -ga sourcefiles

for file in $ZSHLIBDIR/aliases/* ; do
	if [[ -a "$file" ]]; then
		sourcefiles+="$file"
	fi
done

# Prompt Specific
sourcefiles+="$ZSHLIBDIR/prompt/prompt.zsh"

for file in $sourcefiles[@]; do
	if [[ -a "$file" ]]; then
		source "$file"
	fi
done
