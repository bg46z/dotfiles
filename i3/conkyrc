[
    {
        "full_text" : "${memfree} :: ${memperc}%",
		"color"		: "${if_match ${memperc}>70}\#FFA85C"${else}\#5CFF67${endif}"
    },
    {
        "full_text" : "${time %F}"
	},
	{
		"full_text"	: "${time %l:%M%P}",
		"color"		: "\#D60027"
    }
],
