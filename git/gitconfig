[push]
	default = simple
[alias]
	a = add .
	c = commit
	i = init
	l = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short --max-count=10
	s = status
	co = checkout
	cob = checkout -b
	br = branch
	pu = push
	undo= reset --hard
	unstage = reset HEAD --
	last = log -1 HEAD
	sign = commit -S
	ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
[web]
	browser = google-chrome-stable
[diff]
	tool = vimdiff
[difftool]
	prompt = false
